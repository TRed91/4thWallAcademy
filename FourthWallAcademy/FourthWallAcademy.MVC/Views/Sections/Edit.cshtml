@model SectionsFormModel

@{
    ViewData["Title"] = "4th Wall Academy : Edit Section";
}

<h2 class="display-2 mb-5">Edit Section</h2>
<form asp-controller="Sections" asp-action="Edit" method="post" class="d-flex flex-column gap-2 col-sm-12 col-md-6 col-lg-4">
    @Html.AntiForgeryToken()
    <div>
        <div class="d-flex gap-2">
            <label asp-for="Form.CourseId" class="form-label"></label>
            <select asp-for="Form.CourseId" asp-items="@Model.Courses" class="form-select form-control">
            </select>
            
        </div>
        <span class="text-danger" asp-validation-for="Form.CourseId"></span>
    </div>
    <div>
        <div class="d-flex gap-2 mb-2">
            <label asp-for="Form.InstructorId" class="form-label"></label>
            <select asp-for="Form.InstructorId" asp-items="@Model.Instructors" class="form-select form-control">
            </select>
        </div>
        <span class="text-danger" asp-validation-for="Form.InstructorId"></span>
    </div>
    <div>
        <div class="d-flex gap-2">
            <label asp-for="Form.StartDate" class="form-label"></label>
            <input asp-for="Form.StartDate" class="form-control">
        </div>
        <span class="text-danger" asp-validation-for="Form.StartDate"></span>
    </div>
    <div>
        <div class="d-flex gap-2 mb-2">
            <label asp-for="Form.EndDate" class="form-label"></label>
            <input asp-for="Form.EndDate" class="form-control">
        </div>
        <span class="text-danger" asp-validation-for="Form.EndDate"></span>
    </div>
    <div>
        <div class="d-flex gap-2">
            <label asp-for="Form.StartTime" class="form-label"></label>
            <input asp-for="Form.StartTime" class="form-control">
        </div>
        <span class="text-danger" asp-validation-for="Form.StartTime"></span>
    </div>
    <div class="d-flex gap-5">
        <button type="submit" class="btn btn-primary">Save</button>
        <a onclick="javascript:history.go(-1)" class="link-primary" style="cursor: pointer">Go Back</a>
    </div>
</form>