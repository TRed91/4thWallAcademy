@model FourthWallAcademy.MVC.Models.SectionModels.StudentSectionEditModel

@{
    ViewData["Title"] = "4th Wall Academy : Edit Student Section";
}

<h2 class="display-2 mb-5">Update Student Section</h2>
<h3 class="display-6">Course: @Model.CourseName</h3>
<h3 class="display-6">Student: @Model.StudentAlias</h3>
<form asp-controller="Sections" asp-action="EditStudentSection" method="post" class="d-flex flex-column gap-2 col-sm-12 col-md-6 col-lg-4">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.SectionId)
    @Html.HiddenFor(m => m.StudentId)
    @Html.HiddenFor(m => m.StudentAlias)
    @Html.HiddenFor(m => m.CourseName)
    <div>
        <div class="d-flex align-items-center gap-2">
            <label asp-for="Form.Grade" class="form-label"></label>
            <input asp-for="Form.Grade" class="form-control">
            
        </div>
        <span class="text-danger" asp-validation-for="Form.Grade"></span>
    </div>
    <div>
        <div class="d-flex align-items-center gap-2">
            <label asp-for="Form.Absences" class="form-label"></label>
            <input asp-for="Form.Absences" class="form-control">

        </div>
        <span class="text-danger" asp-validation-for="Form.Absences"></span>
    </div>
    <div class="d-flex align-items-center gap-5">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Details" asp-route-id="@Model.SectionId" class="link-primary">Go Back</a>
    </div>
</form>