@model FourthWallAcademy.MVC.Models.IdentityModels.RegisterUser

@{
    ViewData["Title"] = "4th Wall Academy : Register";
}
<div class="d-flex justify-content-center">
    <form asp-controller="Account" 
          asp-action="Register" 
          method="post" 
          class="card d-flex flex-column gap-3 p-5 col-sm-12 col-md-6 col-lg-4">
        @Html.AntiForgeryToken()
        <div>
            <input asp-for="Username" class="form-control" placeholder="Username">
            <span asp-validation-for="Username"></span>
        </div>
        <div>
            <input asp-for="Password" class="form-control" placeholder="Password">
            <span asp-validation-for="Password"></span>
        </div>
        <div>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <button class="btn btn-primary">Register</button>
    </form>
</div>