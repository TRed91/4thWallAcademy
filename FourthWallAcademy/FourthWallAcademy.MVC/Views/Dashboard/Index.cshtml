@model FourthWallAcademy.MVC.Models.ReportModels.DashboardModel

@{
    ViewData["Title"] = "4th Wall Academy : Admin Dashboard";
}

<h1 class="display-1 text-center">Admin Dashboard</h1>
<table class="table table-bordered text-center">
    <thead>
    <tr class="table-primary"><th colspan="3">Grades</th></tr>
    <tr>
        <th>Min</th>
        <th>Avg</th>
        <th>Max</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>@Model.GradesReport.MinGrade</td>
        <td>@Model.GradesReport.AvgGrade</td>
        <td>@Model.GradesReport.MaxGrade</td>
    </tr>
    <tr>
        <td colspan="3" class="text-start"><a href="">Details...</a></td>
    </tr>
    </tbody>
</table>
<table class="table table-bordered text-center">
    <thead>
    <tr class="table-primary"><th colspan="4">Enrollments</th></tr>
    <tr>
        <th># Students</th>
        <th># Sections</th>
        <th># Enrollments</th>
        <th># Absences</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>@Model.EnrollmentReport.CountStudents</td>
        <td>@Model.EnrollmentReport.CountSections</td>
        <td>@Model.EnrollmentReport.CountEnrollments</td>
        <td>@Model.EnrollmentReport.SumAbsences</td>
    </tr>
    <tr>
        <td colspan="4" class="text-start"><a href="">Details...</a></td>
    </tr>
    </tbody>
</table>
<table class="table table-bordered text-center">
    <thead>
    <tr class="table-primary"><th colspan="3">Powers</th></tr>
    <tr>
        <th>Min Rating</th>
        <th>Avg Rating</th>
        <th>Max Rating</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>@Model.PowersReport.MinRating</td>
        <td>@Model.PowersReport.AvgRating</td>
        <td>@Model.PowersReport.MaxRating</td>
    </tr>
    <tr>
        <td colspan="3" class="text-start"><a href="">Details...</a></td>
    </tr>
    </tbody>
</table>
<table class="table table-bordered text-center">
    <thead>
    <tr class="table-primary"><th colspan="3">Weaknesses</th></tr>
    <tr>
        <th>Min Risk Lv</th>
        <th>Avg Risk Lv</th>
        <th>Max Risk Lv</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>@Model.WeaknessesReport.MinRiskLv</td>
        <td>@Model.WeaknessesReport.AvgRiskLv</td>
        <td>@Model.WeaknessesReport.MaxRiskLv</td>
    </tr>
    <tr>
        <td colspan="3" class="text-start"><a href="">Details...</a></td>
    </tr>
    </tbody>
</table>