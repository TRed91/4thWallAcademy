@model FourthWallAcademy.MVC.Models.StudentModels.StudentFormModel

@{
    ViewData["Title"] = "4th Wall Academy: Edit Student";
}

<h1 class="display-4">Edit Student Data</h1>

<form asp-controller="Admissions" asp-action="EditStudent" method="post" class="m-4 w-50">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="Alias" class="form-label"></label>
        <input asp-for="Alias" class="form-control">
        <span asp-validation-for="Alias" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="LastName" class="form-label"></label>
        <input asp-for="LastName" class="form-control">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="FirstName" class="form-label"></label>
        <input asp-for="FirstName" class="form-control">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DoB" class="form-label"></label>
        <input asp-for="DoB" class="form-control">
        <span asp-validation-for="DoB" class="text-danger"></span>
    </div>
    <div class="d-flex gap-5 align-items-center mt-4">
        <button type="submit" class="btn btn-primary">Save</button>
        <a onclick="history.back()" class="link-primary link" style="cursor: pointer">Go Back</a>
    </div>
</form>